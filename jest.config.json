{
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleNameMapper": {
    "\\.(css|less)$": "identity-obj-proxy"
  },
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
  "setupFiles": ["dotenv/config"]
}